.flex.items-center.justify-between.px-4.py-2.border.bg-white.rounded-xl.mb-4
  .w-full.flex.items-center.justify-between.gap-8.py-2
    %div.w-60
      = image_tag asset_path('wasser.svg'), class: "p-1 rounded-full bg-gray-200", style: "width: 150px;"

    %div.flex.flex-col.items-start.justify-between.gap-8.w-full
      %ul.flex.justify-between.items-center.gap-2.w-full.text-left
        %li.text-md.font-medium Datum
        %li.text-md.font-medium Artikel
        %li.text-md.font-medium Menge

      %ul.flex.justify-between.items-center.gap-2.w-full
        %li= @product.created_at
        %li= @product.name
        %li= @product.amount

    %div.flex.justify-center.items-center.w-96
      = form_for :order, url: orders_path(product_id: @product.id), data: { turbo: false } do |f|
        = f.hidden_field :product_id, value: @product.id
        = f.hidden_field :name, value: @product.name
        = f.hidden_field :amount, value: @product.amount
        = f.submit "Bestellen", class: "bg-red-800 text-white rounded-full py-1 px-6 font-light opacity-75 hover:bg-green-500 hover:text-black cursor-pointer"
