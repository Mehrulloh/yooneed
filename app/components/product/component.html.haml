.flex.items-center.justify-between.px-4.py-2.border.bg-white.rounded-xl.mb-4{data: {controller: "product", product_id: @id}}
  .w-full.flex.items-center.justify-between.gap-8.py-2
    %div.w-60
      - if @status.nil?
        = image_tag asset_path('wasser.svg'), class: "p-1 rounded-full bg-gray-200", style: "width: 150px;"
      - else
        %h2.rounded-full.bg-gray-200.text-3xl.flex.items-center.justify-center{style: "width: 70px; height: 70px;"}
          = @user_shortname

    %div.flex.flex-col.items-start.justify-between.gap-8.w-full
      %ul.flex.justify-between.items-center.gap-2.w-full.text-left
        %li.text-md.font-medium Datum
        - unless @status
          %li.text-md.font-medium Artikel
        %li.text-md.font-medium Menge

      %ul.flex.justify-between.items-center.gap-2.w-full
        %li= @date
        %li= @status ? @user_fullname : @name
        %li= @amount_of_products

    %div.flex.justify-center.items-center.w-96
      = link_to !@status ? "Bestellen" : @status, "#", class: "bg-red-800 text-white rounded-full py-1 px-6 font-light opacity-75 hover:bg-green-500 hover:text-black",
        data: { action: "click->product#order", "product-target": "status" }


