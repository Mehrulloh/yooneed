.flex.flex-col.gap-4
  = form_with model: model, url: profile_user_path(current_user), method: :patch do |form|
    .flex.flex-col.gap-2
      = form.label :name, class: 'w-96'
      = form.text_field :name, placeholder: "Enter your name", class: 'w-full'

      = form.label :surname, class: 'w-96'
      = form.text_field :surname, placeholder: "Enter your lastname", class: 'w-full'

      = form.label :email, class: "w-96"
      = form.text_field :email, placeholder: "Enter your email", class: "w-full", disabled: true
      -#
      -# = form.label :password, class: "w-96"
      -# = form.password_field :password, placeholder: "Enter your password", class: "w-full"
      -#
      -# = form.label :password_confirmation, class: "w-96"
      -# = form.password_field :password_confirmation, placeholder: "Confirm your password", class: "w-full"

    %div
      = form.submit 'Update', class: "dark-button"

  = link_to "Password change", edit_user_registration_path, class: "text-center text-blue-600"
