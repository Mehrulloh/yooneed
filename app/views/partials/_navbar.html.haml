%nav.navbar
  .navbar-container
    %div.flex.justify-start{style: "width: 33.3%;"}
      = link_to "YooNeed", root_path, class: "text-3xl font-bold"

    %div.flex.justify-center{style: "width: 33.3%;"}
      %ul.flex.items-center.gap-10

        - if user_signed_in?
          %li.text-xl.nav-link= link_to "Dashboard", dashboard_path
          %li.text-xl.nav-link= link_to "Products", products_path

          - if current_user.role_supervisor?
            %li.text-xl.nav-link= link_to "Admin", supervisor_users_path

    %div.flex.justify-end{style: "width: 33.3%;"}
      - if user_signed_in?
        = link_to 'Log Out', destroy_user_session_path, data: { "turbo-method": :delete }, class: "dark-button rounded-lg"
